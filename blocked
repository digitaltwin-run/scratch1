#!/bin/bash
# Wrapper script for Blockly YAML Editor

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
cd "$SCRIPT_DIR"

# Aktywacja virtualenv je≈õli istnieje
if [ -d "venv" ]; then
    source venv/bin/activate
fi

# Execute the primary editor script directly
if [ -f "simple-yaml-editor.py" ]; then
    python3 simple-yaml-editor.py "$@"
else
    echo "Error: Main editor script 'simple-yaml-editor.py' not found."
    exit 1
fi
