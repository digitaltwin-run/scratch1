#!/bin/bash
# Wrapper script for Blockly YAML Editor

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
cd "$SCRIPT_DIR"

# Aktywacja virtualenv jeśli istnieje
if [ -d "venv" ]; then
    source venv/bin/activate
fi

# Sprawdź który plik Python istnieje i użyj go
if [ -f "simple-yaml-editor.py" ]; then
    python3 simple-yaml-editor.py "$@"
elif [ -f "blocked.py" ]; then
    python3 blocked.py "$@"
elif [ -f "blockly-yaml-editor.py" ]; then
    python3 blockly-yaml-editor.py "$@"
else
    echo "Error: No Python script found"
    exit 1
fi
